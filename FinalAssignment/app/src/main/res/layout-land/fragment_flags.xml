<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlagsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/canadaIV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="#8BC34A"
            android:clickable="true"
            android:cropToPadding="false"
            android:onClick="onImageClick"
            android:padding="0dp"
            android:src="@drawable/canada" />

        <ImageView
            android:id="@+id/chinaIV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="#8BC34A"
            android:clickable="true"
            android:cropToPadding="false"
            android:onClick="onImageClick"
            android:padding="0dp"
            android:src="@drawable/china" />

        <ImageView
            android:id="@+id/mexicoIV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="#8BC34A"
            android:clickable="true"
            android:cropToPadding="false"
            android:onClick="onImageClick"
            android:padding="0dp"
            android:src="@drawable/mexico" />

        <ImageView
            android:id="@+id/saudiIV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="#8BC34A"
            android:clickable="true"
            android:cropToPadding="false"
            android:onClick="onImageClick"
            android:padding="0dp"
            android:src="@drawable/saudi" />

        <ImageView
            android:id="@+id/usIV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="#8BC34A"
            android:clickable="true"
            android:cropToPadding="false"
            android:onClick="onImageClick"
            android:padding="0dp"
            android:src="@drawable/us" />
    </LinearLayout>
</FrameLayout>